
<%= render "users/header" %>
<div class="contents row">
  <% @texts.each do |text| %>
    <div class="content_post" style="background-image: url(<%= text.image %>);">
      <span class="day">
        <%= text.day %>
      </span>
      <p><%= text.place %></p>
      <p><%= text.transportation %></p>
      <p><%= text.freedom %></p>
      <%= image_tag text.image.variant(resize: '150x150'), class: 'text-image' if text.image.attached?%>
    </div>
    <li>
         <%= link_to '編集', edit_text_path(text.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', text_path(text.id), method: :delete %>
        </li>
  <% end %>
</div>

